{block title}
    {$article->name|trim}
{/block}
{block description}
    {$article->description|trim}
{/block}
{block keywords}
    {$article->keywords|trim}
{/block}
{block breadcumb}
    <div aria-label="breadcrumb">
        <ol class="breadcrumb br-0 mb-0">
            <li class="breadcrumb-item"><a n:href="home" class="text-dark">{$nastaveni->nazev}</a></li>
            <li class="breadcrumb-item"><a class="text-dark" n:href="Page:archiv">{_front.go.backList}</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                {$article->name|trim}
            </li>
        </ol>
    </div>
{/block}
{block content}
    <style>
        .dark-blue-btn {
            background:#01579b;
            color:#fff;
            transition:0.5s;
        }
    </style>
    <article>
    <div class="card border-radius-0 border-0">
    <div class="card-body min-height-card">
        <small class="text-muted font-weight-bold"><a n:href="Page:home" class="extern-href" style="color: #dc3545">{_front.go.backNews}</a></small>
        <h3>{$article->name}</h3>
        {$article->content|noescape}
        {ifset $articleRepository->getMiniature($article->id)[0]}
            <a n:href="article, $article->url">
                <img src="{$basePath}/{$articleRepository->getMiniature($article->id)[0]}" class="hover-shadow w-100 default-margin-bot"/>
            </a>
        {/ifset}
        <hr>
        <span class="float-right text-muted">
        {$article->author}, {$article->created_at|date:'j.n.Y'}
    </span>
        <div class="kategorie default-margin-bot">
            {if $category}
                <a n:href="archiv"><span class="badge text-left" style="background-color:{$category->color|noescape}; color:#fff;">{$category->name}</span></a>
            {else}
                <a n:href="archiv"><span class="badge badge-dark text-left">NEZAÅ˜AZENO</span></a>
            {/if}
        </div>
        <style>
            footer {
                display:none!important;
            }
        </style>
    </div>
    </div>
         {if $logged}
             <br>
             <a n:href=":Admin:Article:edit $article->url" target="_blank" class="btn dark-blue-btn dark-blue-border float-right border-radius-0 " style="margin-bottom: 16px">{_front.articleView.edit}</a>
         {/if}
     </article>
{/block}
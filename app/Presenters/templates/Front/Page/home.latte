									<p class="card-text">
										<small class="text-muted">
											{$article->created_at|date:'j.n.Y H:i'}
										</small>
										<span class="badge badge-pill float-right text-white"
											  style="background-color:{$categoryColor|noescape}">
											{$article->category_name ? $article->category_name : "Nezařazeno"}
										</span>
									</p>
								</div>
							</div>
						</div>
					{else}
						<div n:class="'news-card', $iterator->counter === 2 || $iterator->counter === 3 ? 'col-sm-6' : 'col-sm-4'">
							<div class="card unzoomed">
								<div class="card-body">
									<h5 class="card-title"><a n:href="article, $article->url">

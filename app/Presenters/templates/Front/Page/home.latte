	<div class="padding-walls-32" style="padding-bottom: 32px; margin-top:12px;">
		<h3 class="font-weight-normal aktuality">
			<i class="fa fa-thumb-tack font-weight-normal"></i> AKTUALITY
			<span class="text-black-50">{="now"|date:'j.n.Y'}</span>
		</h3>
		<div class="card-deck">
			<div class="row">
				{foreach $articles as $article}
					{var $categoryColor = $article->category_color ? $article->category_color : "#343a40"}
					{if $iterator->isFirst()}
						<div class="col-sm-12 news-card" >
							<div class="card head-article border zoomed br-0">
								<div class="card-body">
									<h4 class="card-title"><a n:href="article, $article->url">{$article->name}</a></h4>
									<div n:class="'card-text', strlen(strip_tags(trim($article->content))) > 370 ? 'readmore' : ''">
										{trim(App\Model\Utils::substrWithoutHTML($article->content,340))|noescape}
